{
	"name": "Copy by Ivan",
	"version": "0.3",
	"manifest_version": 2,
	"description": "Kopira podatke iz Jaspera.",
	"icons": {
		"48": "/asset/images/copy.png"
	},
	"permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"48": "/asset/images/copy.png"
		}
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			}
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run_at": "document_end",
			"js": ["contentScript.js"]
		}
	],
	"web_accessible_resources": ["injectACS.js", "script.js", "pageScript.js", "contentScript.js"]
}
